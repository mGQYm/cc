.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 80rpx;
}

.logo {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 10rpx;
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.login-form {
  width: 100%;
  max-width: 600rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.form-input {
  width: 100%;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background: #f9f9f9;
}

.form-input:focus {
  border-color: #1976D2;
  background: white;
}

.login-btn {
  width: 100%;
  padding: 30rpx;
  background: #1976D2;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.login-btn:active {
  opacity: 0.8;
}

.login-btn.loading {
  background: #ccc;
}

.login-btn[disabled] {
  background: #ccc;
}

.login-footer {
  position: absolute;
  bottom: 40rpx;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}