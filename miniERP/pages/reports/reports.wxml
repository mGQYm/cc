<!-- 报表中心页面 -->
<view class="container">
  <view class="header">
    <text class="title">报表中心</text>
    <text class="subtitle">数据驱动决策</text>
  </view>

  <view class="report-cards">
    <view class="report-card" bindtap="viewSalesReport">
      <view class="card-icon sales">
        <image src="/images/sales-report.png" class="icon"></image>
      </view>
      <view class="card-content">
        <text class="card-title">销售报表</text>
        <text class="card-desc">查看销售趋势和业绩分析</text>
        <text class="card-value">¥{{todaySales}}</text>
      </view>
    </view>

    <view class="report-card" bindtap="viewInventoryReport">
      <view class="card-icon inventory">
        <image src="/images/inventory-report.png" class="icon"></image>
      </view>
      <view class="card-content">
        <text class="card-title">库存报表</text>
        <text class="card-desc">库存状态和低库存预警</text>
        <text class="card-value">{{totalProducts}}种</text>
      </view>
    </view>

    <view class="report-card" bindtap="viewCustomerReport">
      <view class="card-icon customer">
        <image src="/images/customer-report.png" class="icon"></image>
      </view>
      <view class="card-content">
        <text class="card-title">客户报表</text>
        <text class="card-desc">客户分析和活跃度统计</text>
        <text class="card-value">{{totalCustomers}}人</text>
      </view>
    </view>

    <view class="report-card" bindtap="viewOrderReport">
      <view class="card-icon order">
        <image src="/images/order-report.png" class="icon"></image>
      </view>
      <view class="card-content">
        <text class="card-title">订单报表</text>
        <text class="card-desc">订单状态和完成率统计</text>
        <text class="card-value">{{todayOrders}}单</text>
      </view>
    </view>
  </view>

  <view class="date-selector">
    <text class="selector-label">时间范围:</text>
    <picker mode="date" fields="month" value="{{selectedMonth}}" bindchange="onDateChange">
      <view class="date-picker">
        {{selectedMonth}}
        <text class="picker-arrow">▼</text>
      </view>
    </picker>
  </view>

  <view class="chart-section">
    <view class="chart-title">月度销售趋势</view>
    <view class="chart-container">
      <canvas canvas-id="salesChart" class="sales-chart"></canvas>
    </view>
  </view>

  <view class="quick-stats">
    <view class="stat-item">
      <text class="stat-value">¥{{monthlySales}}</text>
      <text class="stat-label">本月销售额</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{monthlyOrders}}</text>
      <text class="stat-label">本月订单数</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{newCustomers}}</text>
      <text class="stat-label">新增客户</text>
    </view>
  </view>
</view>