.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.search-filter-bar {
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.search-input-container {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  padding: 10rpx;
}

.add-btn {
  width: 64rpx;
  height: 64rpx;
  background: #1976D2;
  color: white;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.add-btn image {
  width: 32rpx;
  height: 32rpx;
}

.category-tabs {
  padding: 0 20rpx 20rpx;
  background: white;
}

.tabs-container {
  display: flex;
  gap: 20rpx;
  white-space: nowrap;
}

.tab {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 50rpx;
  font-size: 26rpx;
  transition: all 0.3s;
  border: none;
}

.tab.active {
  background: #1976D2;
  color: white;
}

.sort-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.sort-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.sort-btn {
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 25rpx;
  font-size: 26rpx;
}

.sort-btn.active {
  background: #E3F2FD;
  color: #1976D2;
}

.product-list {
  flex: 1;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.loading image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.empty-state {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
}

.empty-state image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #1976D2;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.product-grid {
  padding: 20rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.product-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-image-container {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.3;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-code {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 8rpx;
}

.product-stock {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.low-stock {
  font-size: 22rpx;
  color: #F44336;
  background: #FFEBEE;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  display: inline-block;
}

.load-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  grid-column: 1 / -1;
}

.load-more image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
  grid-column: 1 / -1;
}