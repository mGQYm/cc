.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.product-image {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.product-img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.product-info {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.info-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.price {
  color: #ff6b6b;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.edit-btn, .delete-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
  border: none;
}

.edit-btn {
  background-color: #1976D2;
  color: white;
}

.delete-btn {
  background-color: #f56c6c;
  color: white;
}

.edit-btn:active {
  background-color: #1565C0;
}

.delete-btn:active {
  background-color: #e53935;
}