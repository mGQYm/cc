.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #1976D2, #42A5F5);
  padding: 40rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.greeting-text {
  font-size: 28rpx;
  opacity: 0.9;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 8rpx;
}

.date-time {
  text-align: right;
}

.date {
  font-size: 24rpx;
  opacity: 0.8;
}

.dashboard-content {
  flex: 1;
  padding: 20rpx;
}

.stats-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.stat-icon image {
  width: 32rpx;
  height: 32rpx;
}

.stat-icon.customers {
  background-color: #E3F2FD;
}

.stat-icon.products {
  background-color: #E8F5E8;
}

.stat-icon.orders {
  background-color: #FFF3E0;
}

.stat-icon.revenue {
  background-color: #E8F5E8;
}

.stat-content {
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.quick-actions {
  margin-bottom: 30rpx;
}

.actions-grid {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background: white;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #333;
}

.recent-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 24rpx;
  color: #1976D2;
}

.recent-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.recent-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-item:last-child {
  border-bottom: none;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.item-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-pending {
  background-color: #FFF3E0;
  color: #FF9800;
}

.status-completed {
  background-color: #E8F5E8;
  color: #4CAF50;
}

.status-cancelled {
  background-color: #FFEBEE;
  color: #F44336;
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.item-customer,
.item-email {
  font-size: 26rpx;
  color: #666;
}

.item-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976D2;
}

.item-phone {
  font-size: 24rpx;
  color: #666;
}

.item-time {
  font-size: 22rpx;
  color: #999;
}

.empty-state {
  padding: 60rpx 20rpx;
  text-align: center;
  color: #999;
}

.empty-state image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}