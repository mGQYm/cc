.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-section {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #1976D2;
  padding-bottom: 15rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.picker {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #f8f9fa;
  font-size: 30rpx;
  color: #333;
}

.textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #f8f9fa;
  font-size: 30rpx;
  box-sizing: border-box;
}

.product-list {
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.product-price {
  display: block;
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #1976D2;
  color: white;
  border: none;
  font-size: 36rpx;
  line-height: 60rpx;
  text-align: center;
}

.quantity-btn:active {
  background-color: #1565C0;
}

.quantity {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}

.add-product-btn {
  width: 100%;
  height: 88rpx;
  background-color: #f0f0f0;
  color: #1976D2;
  border: 2rpx dashed #1976D2;
  border-radius: 44rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
}

.add-product-btn:active {
  background-color: #e3f2fd;
}

.summary-section {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
  font-weight: bold;
}

.summary-item .label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 0;
}

.summary-item .value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.summary-item .total {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1976D2;
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 88rpx;
  text-align: center;
}

.submit-btn:active {
  background-color: #1565C0;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #999999;
}