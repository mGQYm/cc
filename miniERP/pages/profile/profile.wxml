<view class="container">
  <!-- 用户信息头部 -->
  <view class="user-header">
    <view class="user-avatar">
      <image wx:if="{{userInfo.avatar}}" src="{{userInfo.avatar}}" mode="aspectFill" />
      <view wx:else class="avatar-placeholder">
        {{userInfo.name ? userInfo.name.charAt(0) : '用'}}
      </view>
    </view>
    <view class="user-info">
      <text class="user-name">{{userInfo.name || '用户'}}</text>
      <text class="user-role">{{userInfo.role || '管理员'}}</text>
    </view>
  </view>

  <!-- 统计信息 -->
  <view class="stats-section">
    <view class="stats-grid">
      <view class="stat-item">
        <text class="stat-number">{{userInfo.totalOrders || 0}}</text>
        <text class="stat-label">总订单</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{userInfo.totalCustomers || 0}}</text>
        <text class="stat-label">客户数</text>
      </view>
      <view class="stat-item">
        <text class="stat-number">{{userInfo.totalProducts || 0}}</text>
        <text class="stat-label">产品数</text>
      </view>
    </view>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-section">
    <view class="menu-list">
      <block wx:for="{{menuItems}}" wx:key="title">
        <view class="menu-item" bindtap="navigateToMenuItem" data-url="{{item.url}}">
          <view class="menu-icon">
            <image src="../../images/{{item.icon}}.png" mode="aspectFit" />
          </view>
          <view class="menu-content">
            <text class="menu-title">{{item.title}}</text>
            <image class="arrow-icon" src="../../images/arrow-right.png" mode="aspectFit" />
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text class="version-text">{{appInfo.name}} v{{appInfo.version}}</text>
  </view>

  <!-- 退出登录按钮 -->
  <view class="logout-section">
    <button class="logout-btn" bindtap="logout">退出登录</button>
  </view>
</view>