<view class="container">
  <view class="game-title">路径迷宫</view>
  <view class="game-info">
    <text class="info-item">第 {{level}} 关</text>
    <text class="info-item">剩余 {{remainingCells}} 格</text>
  </view>
  
  <view class="interaction-mode">
    <button class="mode-btn {{interactionMode === 'click' ? 'active' : ''}}" bindtap="switchToClick">
      点击模式
    </button>
    <button class="mode-btn {{interactionMode === 'drag' ? 'active' : ''}}" bindtap="switchToDrag">
      拖拽模式
    </button>
  </view>
  
  <canvas canvas-id="gameCanvas" style="width: 100%; height: 60vh;" disable-scroll="true"></canvas>
  
  <view class="control-buttons">
    <button class="btn btn-secondary" bindtap="resetLevel">重玩本关</button>
    <button class="btn btn-primary" bindtap="nextLevel">下一关</button>
  </view>
</view>